{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "strict": true,
    "declaration": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "include": [
    "vite.config.mts",
    "src/**/*.ts",
    "src/**/*.vue"
, "src/index.mts"  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}