{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "strict": true,
    "declaration": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "outDir": "dist",
    "moduleResolution": "node",
    "paths": {
      // workaround for: https://github.com/vitest-dev/vitest/issues/4567
      "rollup/parseAst": ["./node_modules/rollup/dist/parseAst"]
    }
  },
  "include": [
    "vite.config.mts",
    "src/**/*.ts",
    "src/**/*.vue"
, "src/index.mts"  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}